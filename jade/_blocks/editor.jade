-
  var toolsItems = [
    {
      name: "crop",
      title: "Кадрировать",
      isChecked: "checked"
    },
    {
      name: "fill",
      title: "Заполнить",
      isChecked: false
    },
    {
      name: "contrast",
      title: "Контраст",
      isChecked: false
    }
  ]

mixin editor
  +b.FORM.editor
    +e.inner
      +e.img-wrap
        +e.IMG.img(
          src="https://placebear.com/200/300",
          alt="Ваша фотография",
          title="Ваша фотография"
          )

      +e.tools
        each item in toolsItems
          +e.tool
            +e.INPUT.input(
              type="radio",
              name="tool"
              id="tool-" + item.name,
              checked=item.isChecked
              )
            +e.LABEL.label(
              class="__item--" + item.name,
              for="tool-" + item.name
              )= item.title
              +e.SVG.icon
                use
            +e(class="control--" + item.name)
              +e.scale
                +e.toggle

        +e.btn-wrap
          +b.BUTTON.btn--editor(type="submit") Запостить
          +b.BUTTON.btn--editor(type="reset") Отмена
