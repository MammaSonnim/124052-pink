mixin tariffs
  +b.SECTION.tariffs
    +e.wrap
      +e.controls
        each item, index in site.data.tariffs
          - var ifChecked = false
          if index == 0
            - ifChecked = true
          +e.INPUT.input(
            id="price-" + (index + 1),
            type="radio",
            name="tariff",
            checked = ifChecked
          )
          +e.LABEL.control(for="price-" + (index + 1))
      each item in site.data.tariffs
        +e.item
          +e.TABLE
            +e.TR
              +e.TH(colspan="2")
                +e.SPAN.title= item.name
                +e.SPAN.price= item.price + " USD"
            each val in item.options
              +e.TR
                +e.TD= val.name
                +e.TD
                  if val.value == true
                    +e.SPAN.is--true Есть
                  else
                    +e.SPAN.--false Нет
