mixin tariffs
  +b.SECTION.tariffs
    //- slider-block starts
    +b.slider--tariffs
      +e.controls
        each item, index in site.data.tariffs
          - var isChecked = false
          if index == 0
            - isChecked = true
          +e.INPUT.input(
            id="price-" + (index + 1),
            type="radio",
            name="tariffs",
            checked = ifChecked
            )
          +e.LABEL.control(for="tariff-" + (index + 1))
    //- slider-block ends
    each item in site.data.tariffs
      +tariff(item)
