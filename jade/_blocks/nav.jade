-
  var navItems = [
    {
      name: "Информация",
      link: "info.html"
    },
    {
      name: "Возможности",
      link: "features.html"
    },
    {
      name: "Отзывы",
      link: "reviews.html"
    },
    {
      name: "Стоимость",
      link: "price.html"
    }
  ]

mixin nav
  +b.NAV.nav
    +logo
    +e.icon-menu--opened
    +e.UL.list--opened
      each item in navItems
        +e.LI.item
          +e.A.link(href=item.link) #{item.name}
